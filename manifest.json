{
  "manifest_version": 3,
  "name": "Auto Quality Setter",
  "version": "1.1.0",
  "description": "Automatically set video quality on Twitch and YouTube",
  "permissions": ["storage", "activeTab", "tabs"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "commands": {
    "toggle_current_platform": {
      "suggested_key": { "default": "Alt+Q" },
      "description": "Toggle quality setter for current platform"
    }
  },
  "content_scripts": [
    {
      "matches": ["*://*.twitch.tv/*"],
      "js": ["content-twitch.js"],
      "run_at": "document_idle"
    },
    {
      "matches": ["*://*.youtube.com/*"],
      "js": ["content-youtube.js"],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "inject-twitch.js",
        "inject-youtube.js",
        "inject-twitch-pvqc.js"
      ],
      "matches": ["*://*.twitch.tv/*", "*://*.youtube.com/*"]
    }
  ]
}
